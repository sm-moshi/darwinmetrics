# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Nim files
[*.{nim,nims,nimble}]
indent_style = space
indent_size = 2
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = true
max_line_length = 120

# YAML files (for GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Documentation
[docs/*]
indent_style = space
indent_size = 4
max_line_length = 120